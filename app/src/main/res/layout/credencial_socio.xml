<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/width_cred"
    android:layout_height="@dimen/height_card"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_inicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/topB"
                android:padding="2dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:weightSum="1"
                android:orientation="horizontal"
                android:background="@drawable/background_rounded_top">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_logo_bienestar_02"
                    android:layout_margin="5dp"/>

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="CARNET\nSOCIO"
                    android:textSize="15sp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/montserrat_black"/>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo_unse"
                    android:layout_weight="0.3"
                    android:layout_margin="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NRO CREDENCIAL: 1"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat_black"/>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DNI: "
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_black"/>

                        <TextView
                            android:id="@+id/txtDni"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_regular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apellido: "
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_black"/>

                        <TextView
                            android:id="@+id/txtApellido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_regular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre: "
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_black"/>

                        <TextView
                            android:id="@+id/txtNombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_regular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rol:"
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_black"/>

                        <TextView
                            android:id="@+id/txtRol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_regular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sexo: "
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_black"/>

                        <TextView
                            android:id="@+id/txtSexo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_regular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha Registro: "
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_black"/>

                        <TextView
                            android:id="@+id/txtFecha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_regular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AÃ±o: "
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_black"/>

                        <TextView
                            android:id="@+id/txtAnio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_regular"/>

                    </LinearLayout>

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgUser"
                    android:layout_weight="0.2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_user"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomB"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:orientation="horizontal"
                android:layout_weight="0.1"
                android:background="@drawable/background_rounded_botton">

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>