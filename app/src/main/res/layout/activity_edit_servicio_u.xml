<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_trans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                card_view:backgroundTint="@color/colorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="34sp"
                        android:text="Odontología"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/blackTextColor"
                        android:padding="10dp"
                        android:background="@color/transparente"
                        android:fontFamily="@font/montserrat_black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Doctor/a: "
                                android:textColor="@color/blackTextColor"
                                android:textSize="16sp"
                                android:fontFamily="@font/montserrat_black"/>

                            <EditText
                                android:id="@+id/edtNameDoc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="Matías Umañoweieong"
                                android:textStyle="bold"
                                android:textColor="@color/colorTextDefault"
                                android:padding="10dp"
                                android:background="@color/transparente"
                                android:fontFamily="@font/montserrat_regular"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Días: "
                                android:textColor="@color/blackTextColor"
                                android:textSize="16sp"
                                android:fontFamily="@font/montserrat_black"/>

                            <EditText
                                android:enabled="false"
                                android:id="@+id/edtDia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="lunes, miércoles y viernes."
                                android:textStyle="bold"
                                android:textColor="@color/colorTextDefault"
                                android:padding="10dp"
                                android:background="@color/transparente"
                                android:fontFamily="@font/montserrat_regular"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Horarios: "
                                android:textColor="@color/blackTextColor"
                                android:textSize="16sp"
                                android:fontFamily="@font/montserrat_black"/>

                            <EditText
                                android:enabled="false"
                                android:id="@+id/edtHorarios"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="15:00hs, 16:00hs y 17:00hs."
                                android:textStyle="bold"
                                android:textColor="@color/colorTextDefault"
                                android:padding="10dp"
                                android:background="@color/transparente"
                                android:fontFamily="@font/montserrat_regular"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Descripción:"
                                android:textColor="@color/blackTextColor"
                                android:textSize="16sp"
                                android:fontFamily="@font/montserrat_black"/>

                            <EditText
                                android:enabled="false"
                                android:id="@+id/edtDesc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="Especializado en algo"
                                android:textStyle="bold"
                                android:textColor="@color/colorTextDefault"
                                android:padding="10dp"
                                android:background="@color/transparente"
                                android:fontFamily="@font/montserrat_regular"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnEditar"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textColor="@color/whiteTextColor"
                            android:textSize="16sp"
                            android:background="@drawable/button_border"
                            android:text="EDITAR"
                            android:fontFamily="@font/montserrat_black"/>

                    </LinearLayout>

                    <Button
                        android:layout_margin="10dp"
                        android:id="@+id/btnDeshabilitar"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_border"
                        android:text="DESHABILITAR"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        android:fontFamily="@font/montserrat_black" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>