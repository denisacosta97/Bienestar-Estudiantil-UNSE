<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/toolbar_trans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Reserva"
                    android:textAlignment="center"
                    android:textSize="56sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="Para confirmar la reserva, debes presentarte con los siguientes papeles:"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_regular"/>

                <Button
                    android:id="@+id/btnRequisitos"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="VER REQUISITOS"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/corners_rounded_green"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:backgroundTint="@color/colorMoney"
                    android:fontFamily="@font/montserrat_black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtnombre"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/edit_text_logreg"
                    android:hint="Nombre completo"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_regular"/>

                <EditText
                    android:layout_margin="5dp"
                    android:id="@+id/txtapellido"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_logreg"
                    android:hint="Apellidos"
                    android:inputType="textEmailSubject"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_regular"/>

                <EditText
                    android:id="@+id/txtemail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_logreg"
                    android:hint="Legajo/DNI"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_regular"/>

                <LinearLayout
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_weight="0.5"
                        android:id="@+id/txtdateR"
                        android:layout_width="165dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edit_text_logreg"
                        android:clickable="true"
                        android:focusable="false"
                        android:hint="Fecha"
                        android:inputType="date"
                        android:longClickable="false"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_regular"/>

                    <EditText
                        android:layout_weight="0.5"
                        android:id="@+id/edtxTime"
                        android:layout_width="165dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edit_text_logreg"
                        android:focusable="false"
                        android:hint="Hora"
                        android:longClickable="false"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_regular"/>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_border"
                        android:text="Cancelar"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/montserrat_black"/>

                    <Button
                        android:id="@+id/btnReservaF"
                        android:layout_width="150dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_border"
                        android:text="Reservar"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/montserrat_black"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>