<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/toolbar_trans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Aquí podrás realizar las reservas de la cancha de fútbol 11 por hora como también las reservas del SUM y los quinchos."
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_regular"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_two"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginTop="15dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cancha"
                            android:layout_marginLeft="100dp"/>

                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/shape_triangle"
                            android:layout_marginLeft="-56dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Canchas"
                            android:layout_margin="10dp"
                            android:textColor="@color/whiteTextColor"
                            android:textSize="30sp"
                            android:fontFamily="@font/montserrat_black"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Aquí podrás reservar\nuna cancha por\nhora."
                            android:layout_margin="10dp"
                            android:gravity="center|left"
                            android:textSize="14sp"
                            android:textColor="@color/whiteTextColor"
                            android:fontFamily="@font/montserrat_regular"/>

                    </RelativeLayout>

                    <Button
                        android:id="@+id/layCancha"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center|right"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_border"
                        android:text="MÁS INFO"
                        android:textColor="@color/colorWhite"
                        android:drawableRight="@drawable/flecha_derecha"
                        android:drawableTint="@color/whiteTextColor"
                        android:textSize="16sp"
                        android:fontFamily="@font/montserrat_black"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginTop="15dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/imgborrar1"
                            android:layout_marginLeft="100dp"/>

                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/shape_triangle"
                            android:layout_marginLeft="-56dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="SUM y\nQuinchos"
                            android:layout_margin="10dp"
                            android:textColor="@color/whiteTextColor"
                            android:textSize="30sp"
                            android:fontFamily="@font/montserrat_black"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Aquí podrás reservar\ntanto el SUM como\nalguno de los\nquinchos."
                            android:layout_margin="10dp"
                            android:paddingTop="20dp"
                            android:gravity="center|left"
                            android:textSize="14dp"
                            android:textColor="@color/whiteTextColor"
                            android:fontFamily="@font/montserrat_regular"/>

                    </RelativeLayout>

                    <Button
                        android:id="@+id/laySalon"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center|right"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_border"
                        android:text="MÁS INFO"
                        android:textColor="@color/colorWhite"
                        android:drawableRight="@drawable/flecha_derecha"
                        android:drawableTint="@color/whiteTextColor"
                        android:textSize="16sp"
                        android:fontFamily="@font/montserrat_black"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>