<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorGrey"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/toolbar_trans">
        </include>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/blackTextColor"
                        android:textSize="18sp"
                        android:fontFamily="@font/montserrat_black"
                        android:text="Por Tipo de Usuario" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pie_usuario"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/montserrat_black"
                        android:layout_height="300dp">

                    </com.github.mikephil.charting.charts.PieChart>

                </LinearLayout>




            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/blackTextColor"
                        android:fontFamily="@font/montserrat_black"
                        android:text="Por Sexo" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/bar_sexo"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_height="300dp">

                    </com.github.mikephil.charting.charts.BarChart>

                    <LinearLayout
                        android:id="@+id/latDatos"
                        android:gravity="center"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/blackTextColor"
                        android:textSize="18sp"
                        android:fontFamily="@font/montserrat_black"
                        android:text="Por Facultad" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pie_facultad"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/montserrat_black"
                        android:layout_height="300dp">

                    </com.github.mikephil.charting.charts.PieChart>

                </LinearLayout>




            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/blackTextColor"
                        android:fontFamily="@font/montserrat_black"
                        android:text="Por Provincia" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/bar_provincia"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_height="300dp">

                    </com.github.mikephil.charting.charts.BarChart>

                    <LinearLayout
                        android:id="@+id/latDatos2"
                        android:gravity="center"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>