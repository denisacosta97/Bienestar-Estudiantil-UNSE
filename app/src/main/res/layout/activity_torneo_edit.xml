<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_trans"/>

        <ImageView
            android:id="@+id/imgvIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:translationY="10dp"
            android:elevation="4sp"
            android:src="@drawable/ic_cup" />

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="2sp"
            app:cardCornerRadius="10dp"
            android:translationY="-60dp"
            android:outlineAmbientShadowColor="@color/colorGrey2"
            android:outlineSpotShadowColor="@color/colorGrey2"
            card_view:backgroundTint="@color/colorWhite">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:enabled="false"
                        android:id="@+id/edtxNameTorneo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="45sp"
                        android:gravity="center"
                        android:text="Torneo JUR"
                        android:layout_marginTop="45dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextDefault"
                        android:padding="10dp"
                        android:background="@color/transparente"
                        android:fontFamily="@font/montserrat_black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lugar: "
                                android:textSize="16sp"
                                android:fontFamily="@font/montserrat_black"/>

                            <EditText
                                android:enabled="false"
                                android:id="@+id/edtxLugar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="Buenos Aires, Tecnópolis"
                                android:textStyle="bold"
                                android:textColor="@color/colorTextDefault"
                                android:padding="10dp"
                                android:background="@color/transparente"
                                android:fontFamily="@font/montserrat_regular"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fecha de inicio: "
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:fontFamily="@font/montserrat_black"/>

                            <EditText
                                android:enabled="false"
                                android:id="@+id/edtxFechaInicio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="12/11/2019"
                                android:textColor="@color/colorTextDefault"
                                android:padding="10dp"
                                android:background="@color/transparente"
                                android:fontFamily="@font/montserrat_regular"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fecha de fin: "
                                android:textSize="16sp"
                                android:fontFamily="@font/montserrat_black"/>

                            <EditText
                                android:enabled="false"
                                android:id="@+id/edtxFechaFin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="20/11/2019"
                                android:textColor="@color/colorTextDefault"
                                android:padding="10dp"
                                android:background="@color/transparente"
                                android:fontFamily="@font/montserrat_regular"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Descripción: "
                                android:textSize="16sp"
                                android:fontFamily="@font/montserrat_black"/>

                            <EditText
                                android:enabled="false"
                                android:id="@+id/edtxDesc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                                android:textColor="@color/colorTextDefault"
                                android:padding="10dp"
                                android:background="@color/transparente"
                                android:fontFamily="@font/montserrat_regular"/>

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/mappoliborrar"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnBorrar"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textColor="@color/whiteTextColor"
                            android:textSize="16sp"
                            android:background="@drawable/button_border"
                            android:text="BORRAR"
                            android:fontFamily="@font/montserrat_black"/>

                        <Button
                            android:id="@+id/btnEditar"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textColor="@color/whiteTextColor"
                            android:textSize="16sp"
                            android:background="@drawable/button_border"
                            android:text="EDITAR"
                            android:fontFamily="@font/montserrat_black"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>