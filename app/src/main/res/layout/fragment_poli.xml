<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="La Universidad Nacional de Santiago del Estero cuenta con un extenso polideportivo donde se desarrollan un gran numero de actividades."
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_regular"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_one"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="230dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imgborrar2"
                    android:layout_marginLeft="100dp"/>

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/shape_triangle"
                    android:layout_marginLeft="-56dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Piletas"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="35dp"
                    android:fontFamily="@font/montserrat_black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Aquí podrás ver\ninformación con\nrespecto a las piletas."
                    android:layout_margin="10dp"
                    android:gravity="center|left"
                    android:textSize="12dp"
                    android:textColor="@color/whiteTextColor"
                    android:fontFamily="@font/montserrat_regular"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btnInfoPileta"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center|right"
                android:layout_margin="10dp"
                android:background="@drawable/button_border"
                android:text="MÁS INFO"
                android:textColor="@color/colorWhite"
                android:drawableRight="@drawable/flecha_derecha"
                android:drawableTint="@color/whiteTextColor"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_black"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_two"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imgborrar1"
                    android:layout_marginLeft="100dp"/>

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/shape_triangle"
                    android:layout_marginLeft="-56dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Reservas"
                    android:layout_margin="10dp"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="34dp"
                    android:fontFamily="@font/montserrat_black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Aquí podrás\nreservar un\nquincho o el SUM\npara eventos y\nla cancha de\nfútbol 11."
                    android:layout_margin="10dp"
                    android:gravity="center|left"
                    android:textSize="16dp"
                    android:textColor="@color/whiteTextColor"
                    android:fontFamily="@font/montserrat_regular"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btnReserva"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_gravity="center|right"
                android:layout_margin="10dp"
                android:background="@drawable/button_border"
                android:text="MÁS INFO"
                android:textColor="@color/colorWhite"
                android:drawableRight="@drawable/flecha_derecha"
                android:drawableTint="@color/whiteTextColor"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_black"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_mapa"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/mapa_poli" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="UBICACIÓN DEL POLIDEPORTIVO"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_black"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>