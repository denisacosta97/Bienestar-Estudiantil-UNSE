<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/backgroundwelcome"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vistas.Activities.LoginWelcomeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_alpha_40"
        android:orientation="vertical">

        <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Buenas noches!"
        android:textColor="@color/whiteTextColor"
        android:textSize="45sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido/a a la aplicación de Bienestar Estudiantíl."
            android:textSize="20sp"
            android:textColor="@color/whiteTextColor"
            android:gravity="center"
            android:layout_marginTop="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:translationX="-120dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/inisesion"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/corners_rounded_green"
                android:text="                        Iniciar sesión"
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawableRight="@drawable/flecha_derecha" />

            <Button
                android:id="@+id/visit"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/corners_rounded_green"
                android:text="               Visitante"
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawableRight="@drawable/flecha_derecha" />

        </LinearLayout>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/bienesplash"/>

    </LinearLayout>


</LinearLayout>