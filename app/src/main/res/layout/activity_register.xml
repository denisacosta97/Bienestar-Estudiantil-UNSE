<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_flecha_atras"/>

        <TextView
            android:id="@+id/tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTRO"
            android:textAlignment="center"
            android:textSize="56sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regístrate para poder realizar tus trámites dentro de Bienestar Estudiantíl. Tienes la opción de escanear el código QR de tu DNI para autocompletar datos."
            android:textSize="14sp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escanear DNI"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

        <ImageButton
            android:id="@+id/btnScanner"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_barcode_dni"
            android:background="@color/transparente"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subí tu foto:"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgUserRegister"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/user"/>

                </RelativeLayout>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Nombre completo"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:padding="15dp"
                    android:inputType="textCapSentences|textPersonName"
                    android:background="@drawable/edit_text_logreg"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtApellido"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Apellidos"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:padding="15dp"
                android:inputType="textCapSentences|textEmailSubject"
                android:background="@drawable/edit_text_logreg"
                android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="1"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilDni"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7">

                    <EditText
                        android:id="@+id/txtDNI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="D.N.I"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:padding="15dp"
                        android:inputType="number"
                        android:background="@drawable/edit_text_logreg"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilSexo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">

                    <EditText
                        android:id="@+id/edtxSexo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Sexo"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:padding="15dp"
                        android:inputType="textCapSentences|textShortMessage"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:background="@drawable/edit_text_logreg"
                        android:textSize="15sp"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/txtdate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Fecha de nacimiento"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:padding="15dp"
                android:inputType="date"
                android:focusable="false"
                android:clickable="true"
                android:maxLines="1"
                android:background="@drawable/edit_text_logreg"
                android:textSize="14sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtemail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Email"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:padding="15dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/edit_text_logreg"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilCelu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtxCelu"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Celular"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:padding="15dp"
                    android:inputType="number"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="@drawable/edit_text_logreg"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilDomic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtxDomicilio"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Domicilio"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:padding="15dp"
                    android:inputType="textCapSentences|text"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="@drawable/edit_text_logreg"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilBarrio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtxBarrio"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Barrio"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:padding="15dp"
                    android:inputType="textCapSentences|text"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="@drawable/edit_text_logreg"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilLocalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtxLocalidad"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Localidad"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:padding="15dp"
                    android:inputType="textCapSentences|text"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="@drawable/edit_text_logreg"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilProvincia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtxProvincia"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Provincia"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:padding="15dp"
                    android:inputType="textCapSentences|text"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="@drawable/edit_text_logreg"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilPais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtxPais"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Pais"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:padding="15dp"
                    android:inputType="textCapSentences|text"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="@drawable/edit_text_logreg"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilContra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtpass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Contraseña"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:padding="15dp"
                    android:inputType="textPassword"
                    android:background="@drawable/edit_text_logreg"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilRecontra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_repass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Confirmar contraseña"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="15dp"
                    android:inputType="textPassword"
                    android:background="@drawable/edit_text_logreg"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:weightSum="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnProfesor"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.2"
                    android:layout_margin="5dp"
                    android:textSize="10dp"
                    android:text="Profesor"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:background="@drawable/corners_rounded_button"/>

                <Button
                    android:id="@+id/btnAlumno"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.2"
                    android:layout_margin="5dp"
                    android:textSize="10dp"
                    android:text="Alumno"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:background="@drawable/corners_rounded_button"/>

                <Button
                    android:id="@+id/btnNoDocente"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.2"
                    android:layout_margin="5dp"
                    android:textSize="10dp"
                    android:text="No docente"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:background="@drawable/corners_rounded_button"/>

                <Button
                    android:id="@+id/btnEgresado"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.2"
                    android:layout_margin="5dp"
                    android:textSize="10dp"
                    android:text="Egresado"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:background="@drawable/corners_rounded_button"/>

                <Button
                    android:id="@+id/btnParticular"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.2"
                    android:layout_margin="5dp"
                    android:textSize="10dp"
                    android:text="Particular"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:background="@drawable/corners_rounded_button"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linlayProfesor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilProfesion1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txtProfesion1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Profesion"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:padding="15dp"
                        android:inputType="textCapSentences|text"
                        android:background="@drawable/edit_text_logreg"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilAnioIng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txtanioIngreso"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Año de ingreso"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:padding="15dp"
                        android:inputType="number"
                        android:background="@drawable/edit_text_logreg"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linlayAlumno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facultad: "
                        android:textStyle="bold"/>

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:overlapAnchor="false"
                        android:background="@drawable/border_spinner"
                        android:spinnerMode="dropdown"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carrera: "
                        android:textStyle="bold"/>

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:overlapAnchor="false"
                        android:background="@drawable/border_spinner"
                        android:spinnerMode="dropdown"/>

                </LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilLeg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txtaLegajo"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Legajo"
                        android:layout_marginTop="10dp"
                        android:padding="15dp"
                        android:inputType="text"
                        android:background="@drawable/edit_text_logreg"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilAnioIngAlu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txtaAnioIngr"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Año de ingreso"
                        android:layout_marginTop="10dp"
                        android:padding="15dp"
                        android:inputType="number"
                        android:background="@drawable/edit_text_logreg"
                        android:textSize="14sp" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linlayEgresado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilProfesion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txtaProfesion2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Profesión"
                        android:layout_marginTop="10dp"
                        android:padding="15dp"
                        android:inputType="textCapSentences|text"
                        android:background="@drawable/edit_text_logreg"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilAnioEgre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txtaAnioEgreso"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Año de egreso"
                        android:layout_marginTop="10dp"
                        android:padding="15dp"
                        android:inputType="number"
                        android:background="@drawable/edit_text_logreg"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnregister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:text="Registrarme"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>