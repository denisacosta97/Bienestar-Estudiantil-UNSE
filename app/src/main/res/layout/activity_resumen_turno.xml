<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent">

                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Solicitud de turno"
                        android:fontFamily="@font/montserrat_black"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            android:text="Tipo de turno"
                            android:fontFamily="@font/montserrat_black"/>

                        <TextView
                            android:id="@+id/txtTipoBeca"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="BECA COMEDOR 2020" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            android:fontFamily="@font/montserrat_black"
                            android:text="Fecha" />

                        <TextView
                            android:id="@+id/txtFecha"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="16/09/20" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            android:fontFamily="@font/montserrat_black"
                            android:text="Hora" />

                        <TextView
                            android:id="@+id/txtHora"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="08:00 - 08:15" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            android:fontFamily="@font/montserrat_black"
                            android:text="Receptor" />

                        <TextView
                            android:id="@+id/txtReceptor"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Receptor 1" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Es correcta ésta información?"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserrat_black"
                    android:textAlignment="center" />

                <FrameLayout
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:id="@+id/singBtn"
                    android:layout_width="300dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/button_border"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?selectableItemBackground">

                    <ProgressBar
                        android:id="@+id/progress"
                        android:layout_width="36dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/txtLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:text="CONFIRMAR"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat_black"/>

                </FrameLayout>

            </LinearLayout>

        </ScrollView>

        <View
            android:id="@+id/revealView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:visibility="invisible" >
        </View>

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="¡CONFIRMADO!"
            android:textSize="30sp"
            android:gravity="center"
            android:visibility="invisible"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/montserrat_black"
            android:textAlignment="center" />

    </RelativeLayout>

</LinearLayout>