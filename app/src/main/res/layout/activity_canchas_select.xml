<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_trans"/>

        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            android:outlineAmbientShadowColor="@color/colorGrey2"
            android:outlineSpotShadowColor="@color/colorGrey2"
            card_view:backgroundTint="@color/colorWhite">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Completá los siguientes datos:"
                        android:fontFamily="@font/montserrat_black"
                        android:textSize="18sp"
                        android:textColor="@color/blackTextColor"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Nombre completo"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:fontFamily="@font/montserrat_black"/>

                    <EditText
                        android:id="@+id/txtNombre"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edit_text_logreg"
                        android:hint=""
                        android:inputType="textPersonName|textCapWords"
                        android:padding="5dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/montserrat_regular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DNI"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_black"/>

                    <EditText
                        android:id="@+id/txtDni"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edit_text_logreg"
                        android:hint=""
                        android:inputType="number"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/montserrat_regular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="Tipo de usuario"
                        android:fontFamily="@font/montserrat_black"
                        android:textColor="@color/colorAccent"/>

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinnerCateg"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:spinnerMode="dropdown" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Datos de la reserva"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/montserrat_black"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:textColor="@color/blackTextColor"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Cancha"
                        android:fontFamily="@font/montserrat_black"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/txtCancha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Fútbol 11"
                        android:textSize="16sp"
                        android:fontFamily="@font/montserrat_regular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Hora"
                        android:fontFamily="@font/montserrat_black"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/txtHora"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="16hs"
                        android:textSize="16sp"
                        android:fontFamily="@font/montserrat_regular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Fecha"
                        android:fontFamily="@font/montserrat_black"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/txtFecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="16/08/20"
                        android:textSize="16sp"
                        android:fontFamily="@font/montserrat_regular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Precio"
                        android:fontFamily="@font/montserrat_black"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/txtPrecio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:textColor="@color/colorMoney"
                        android:text="$1200"
                        android:textSize="26sp"
                        android:fontFamily="@font/montserrat_black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnCancelar"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textColor="@color/whiteTextColor"
                            android:textSize="16sp"
                            android:background="@drawable/button_border"
                            android:text="CANCELAR"
                            android:fontFamily="@font/montserrat_black"/>

                        <Button
                            android:id="@+id/btnReservar"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textColor="@color/whiteTextColor"
                            android:textSize="16sp"
                            android:background="@drawable/button_border"
                            android:text="RESERVAR"
                            android:fontFamily="@font/montserrat_black"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
