<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="DNI: "
                            android:textColor="@color/blackTextColor"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_black"/>

                        <TextView
                            android:id="@+id/txtDni"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blackTextColor"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_regular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Nombre y apellido: "
                            android:textColor="@color/blackTextColor"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_black"/>

                        <TextView
                            android:id="@+id/txtNomAp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blackTextColor"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_regular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Facultad: "
                            android:textColor="@color/blackTextColor"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_black"/>

                        <TextView
                            android:id="@+id/txtFacultad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blackTextColor"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_regular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Carrera: "
                            android:textColor="@color/blackTextColor"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_black"/>

                        <TextView
                            android:id="@+id/txtCarrera"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blackTextColor"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_regular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Fecha de turno: "
                            android:textColor="@color/blackTextColor"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_black"/>

                        <TextView
                            android:id="@+id/txtFechaTurno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blackTextColor"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_regular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Fecha de entrega: "
                            android:textColor="@color/blackTextColor"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_black"/>

                        <TextView
                            android:id="@+id/txtFechaMod"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blackTextColor"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_regular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Tipo de Medicamento: "
                            android:textColor="@color/blackTextColor"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_black"/>

                        <TextView
                            android:id="@+id/txtTipo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blackTextColor"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_regular"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtEstado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="end"
                        android:text="CONFIRMADO"
                        android:textSize="16sp"
                        android:textColor="@color/colorGreen"
                        android:fontFamily="@font/montserrat_black"/>

                    <Button
                        android:id="@+id/btnAtender"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="ATENDER"
                        android:layout_margin="10dp"
                        android:textSize="16sp"
                        android:background="@drawable/button_border"
                        android:fontFamily="@font/montserrat_black"
                        android:textColor="@color/whiteTextColor"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>