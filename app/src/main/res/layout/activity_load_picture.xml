<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgBack"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center"
                android:weightSum="1"
                android:orientation="vertical"
                android:background="@color/colorGreyT"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat_black"
                        android:text="¡Subí una foto de perfil!"
                        android:textSize="20sp" />

                    <TextView
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="La necesitarás para tus credenciales virtuales y además ayudarás al personal de Bienestar Estudiantil a identificarte."
                        android:textSize="16sp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/montserrat_regular"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabPic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-75dp"
                        android:layout_toEndOf="@id/imgUserRegister"
                        android:src="@drawable/ic_camera" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgUserRegister"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_user"
                        app:civ_border_color="#FFFFFF"
                        app:civ_border_width="5dp" />

                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="0.2"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnSaltar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SALTAR"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat_black"
                        style="@style/Widget.AppCompat.Button.Borderless" />

                    <Button
                        android:layout_marginStart="10dp"
                        android:id="@+id/btnAceptar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="ACEPTAR"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat_black"
                        android:background="@drawable/button_border"
                        android:padding="15dp"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>