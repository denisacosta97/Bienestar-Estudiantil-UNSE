<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/card_outline_container"
        android:layout_width="@dimen/width_cred"
        android:layout_height="@dimen/height_card"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_xlarge"
        android:orientation="horizontal">

        <View
            android:id="@+id/back_card_outline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <include layout="@layout/credencial_frente_outline" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="@dimen/width_cred"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_xlarge"
        android:layout_height="@dimen/height_card"
        android:orientation="horizontal">

        <include layout="@layout/credencial_frente" />

        <include layout="@layout/credencial_atras" />

    </LinearLayout>

</FrameLayout>