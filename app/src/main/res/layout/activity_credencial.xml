<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGrey">

    <android.support.v7.widget.CardView
        android:id="@+id/card_inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorPrimaryDark">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo_unse"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CARNET POLIDEPORTIVO"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bienesplash"
                    android:layout_margin="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/txtnombre"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:hint="Nombre completo"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:padding="15dp"
                        android:inputType="textPersonName"
                        android:background="@drawable/edit_text_logreg"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/txtdato"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:hint="Nombre completo"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:padding="15dp"
                        android:inputType="textPersonName"
                        android:background="@drawable/edit_text_logreg"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/txtdato2"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:hint="Nombre completo"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:padding="15dp"
                        android:inputType="textPersonName"
                        android:background="@drawable/edit_text_logreg"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/txtdato3"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:hint="Nombre completo"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:padding="15dp"
                        android:inputType="textPersonName"
                        android:background="@drawable/edit_text_logreg"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="45dp"
                android:text="Legajo/DNI"
                android:textSize="11dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:background="@color/colorPrimaryDark">

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>